{% extends 'layout.twig' %}

{% set url = "https://znotepad.com/notes/" + note.slug_title %}

{% if note.title %}
    {% set title = note.title | trim | safe + ' - ZNotepad.com' %}
{% else %}
    {% set title = 'untitled - ZNotepad.com' %}
{% endif %}

{% set description = note.content_plaintext | truncate(150) | safe | striptags %}

{% block SEO %}
    <meta property="ia:markup_url" content="https://znotepad.com/notes/{{ note.slug_title }}">
    <meta property="og:type" content="article"/>
{% endblock %}

{% block styles %}
    <style>
        .share-url input {
            cursor: copy;
        }
    </style>
{% endblock %}

{% block editor %}
    <div class="column is-8">
        <div class="columns">
            {% include 'partials/what-is-notepad.twig' %}
        </div>
        <div class="columns">
            <div class="column is-12">
                <div class="control">
                    <input readonly disabled maxlength="70" autocomplete="off" value="{{ note.title }}" name="title"
                           class="input is-success" type="text"
                           placeholder="Note Title">
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column is-12">

                <a href="/new-note?base_note={{ note.slug_title }}" class="button is-info"><i class="fas fa-clone"></i>&nbsp;Clone note</a>
                <br>
                <label class="checkbox private-mode">
                    <input name="is_private" type="checkbox" {% if note.is_private %} checked {% endif %}>
                    Don't show note public
                </label>
            </div>
        </div>
        <div class="columns has-background-light">
            <div class="column is-12">
                <label class="label">Share URL</label>
                <div class="field is-grouped">
                    <div class="control is-expanded">
                        <div class="control is-expanded has-icons-left has-icons-right">

                            <label class="share-url">
                                <input readonly class="input is-link" type="text" value="https://znotepad.com/notes/{{ note.slug_title }}">
                            </label>
                            <span class="icon is-small is-left">
                                <i class="fas fa-link"></i>
                            </span>
                            <span class="icon is-small is-right">
                                    <i class="far fa-copy"></i>
                            </span>
                        </div>
                    </div>
                    <p class="control">
                        <a href="https://znotepad.com/notes/{{ note.slug_title }}" target="_blank">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column is-12">
                <label class="label">Content</label>
                <div class="box">{{ note.content | safe }}</div>
            </div>
        </div>
        <div class="columns">
            <div class="column is-12">
                <div class="message is-warning">
                    <div class="message-body">
                        <p>Your note will be stored forever until we receive <a href="mailto:support@znotepad.com">DMCA report</a> to delete about the note.</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}