{% if messages %}
    {% for type, message in messages %}
        <article id="flash-message" class="message is-{{ type }}">
            <div class="message-header">
                <p>{{ type | capitalize }}</p>
                <button type="button" class="delete" aria-label="delete"></button>
            </div>
            <div class="message-body">
                {{ message | safe }}
            </div>
        </article>
    {% endfor %}
{% endif %}