<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <title>{{ title | default('Notepad Online - Write notes online') }}</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="search" type="application/opensearchdescription+xml" href="/opensearch.xml" title="New note on ZNotepad">

    <meta itemprop="name" content="ZNotepad"/>
    <meta name="description" content="{{ description | default('Fast, clean, simple to use and FREE online web notepad. Powerful to share with everyone about your note.') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="online notepad, online note app, online notebook, online bookmark, online private note, private text message, message online, online inbox message"/>
    <meta name="referrer" content="never">
    <meta name="referrer" content="no-referrer">
    {% block SEO %} {% endblock %}

    {# Facebook #}
    <meta property="fb:app_id" content="756951491343121" />
    <meta property="og:image" content="https://znotepad.com/img/notepad-01.png"/>
    <meta property="og:url" content="{{ url | default('https://znotepad.com/') }}"/>
    <meta property="og:title" content="{{ title | default('Notepad Online - Write notes online') }}"/>
    <meta property="og:description" content="{{ description | default('Fast, clean, simple to use and FREE online web notepad. Powerful to share with everyone about your note.') }}"/>

    {# Twitter #}
    <meta property="twitter:card" content="summary"/>
    <meta property="twitter:title" content="{{ title | default('Notepad Online - Write notes online') }}"/>
    <meta property="twitter:description" content="{{ description | default('Fast, clean, simple to use and FREE online web notepad. Powerful to share with everyone about your note.') }}"/>
    <meta property="twitter:image" content="https://znotepad.com/img/notepad-01.png"/>
    <meta property="twitter:url" content="{{ url | default('https://znotepad.com/') }}"/>
    <meta name="theme-color" content="#fafafa">

    <link rel="manifest" href="/site.webmanifest">
    <link rel="apple-touch-icon" href="/icon.png">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.css">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            font-size: 13px;
            background-color: #fff;
        }

        .noselect {
            -webkit-touch-callout: none; /* iOS Safari */
            -webkit-user-select: none; /* Safari */
            -khtml-user-select: none; /* Konqueror HTML */
            -moz-user-select: none; /* Firefox */
            -ms-user-select: none; /* Internet Explorer/Edge */
            user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome and Opera */
        }

        nav.is-spaced {
            padding: 0 2rem !important;
        }

        .navbar-brand a {
            font-weight: bold;
            font-size: 24px;
        }

        .navbar-brand a:hover {
            color: #4a4a4a;
        }

        #editor-container {
            height: 350px;
            font-size: 14px;
        }

        article.post {
            margin: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #E6EAEE;
        }

        article.post a {
            font-weight: 600;
        }

        article.post a:hover {
            text-decoration: underline;
        }

        article.post small {
            font-size: 12px;
        }

        .checkbox.private-mode {
            font-size: 0.9rem;
        }

        .content-wrapper iframe {
            height: 315px;
        }

        .sticky-sidebar {
            min-height: 100%;
            position: relative;
        }

        .sticky-sidebar__inner {
            /*position: fixed;*/
            position: relative;
            transition: width .45s cubic-bezier(.23,1,.32,1) 0ms;
            padding-bottom: 30px;
        }

        .is-size-8 {
            font-size: 15px;
        }

    </style>
    {% block styles %} {% endblock %}
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-1920057962247833",
            enable_page_level_ads: true
        });
    </script>
</head>

